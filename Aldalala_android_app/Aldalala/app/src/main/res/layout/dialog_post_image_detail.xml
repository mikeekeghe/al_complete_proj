<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vp_dialog_img"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <ImageView
        android:id="@+id/iv_dialog_cancle"
        app:srcCompat="@android:drawable/ic_menu_close_clear_cancel"
        android:background="@drawable/xml_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="@dimen/space_8"
        app:layout_constraintRight_toRightOf="@+id/vp_dialog_img"
        app:layout_constraintTop_toTopOf="@+id/vp_dialog_img"
        android:layout_marginTop="8dp" />

    <ImageView
        android:id="@+id/iv_dialog_left"
        app:srcCompat="@drawable/ic_arrow_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/vp_dialog_img"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="@dimen/space_8"
        app:layout_constraintLeft_toLeftOf="@+id/vp_dialog_img"
        app:layout_constraintBottom_toBottomOf="@+id/vp_dialog_img"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.501" />

    <ImageView
        android:id="@+id/iv_dialog_right"
        app:srcCompat="@drawable/ic_arrow_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/vp_dialog_img"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="@dimen/space_8"
        app:layout_constraintRight_toRightOf="@+id/vp_dialog_img"
        app:layout_constraintBottom_toBottomOf="@+id/vp_dialog_img"
        android:layout_marginBottom="8dp" />

</androidx.constraintlayout.widget.ConstraintLayout>